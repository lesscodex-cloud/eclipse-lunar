---
import { cva } from 'class-variance-authority';

const buttonStyles = cva(
  'inline-flex items-center justify-center gap-2 rounded-full font-semibold transition focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-offset-background disabled:cursor-not-allowed disabled:opacity-60',
  {
    variants: {
      intent: {
        primary: 'bg-primary text-white shadow-glow hover:-translate-y-0.5 hover:bg-primary-dark',
        secondary:
          'border border-border/70 bg-surface text-foreground shadow-soft hover:-translate-y-0.5 hover:border-white/30',
        ghost: 'text-foreground border border-transparent hover:border-border/80 hover:bg-white/5',
      },
      size: {
        sm: 'px-3 py-2 text-sm',
        md: 'px-5 py-3 text-base',
        lg: 'px-6 py-3 text-lg',
      },
      fullWidth: {
        true: 'w-full',
      },
    },
    defaultVariants: {
      intent: 'primary',
      size: 'md',
    },
  }
);

const { as = 'button', intent = 'primary', size = 'md', fullWidth = false, class: className = '', ...props } = Astro.props;
const Tag = as;
---
<Tag class={buttonStyles({ intent, size, fullWidth, class: className })} {...props} />
