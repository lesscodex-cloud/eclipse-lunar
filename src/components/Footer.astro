---
import Container from './ui/Container.astro';
import { navConfig } from '../config/nav';
import { siteConfig } from '../config/site';
---
<footer class="mt-20 border-t border-white/10 bg-surface/70 text-foreground/80 backdrop-blur-xl">
  <Container class="grid gap-10 py-12 lg:grid-cols-[1.2fr_2fr] lg:items-start">
    <div class="space-y-4">
      <div class="flex items-center gap-3">
        <div class="flex h-11 w-11 items-center justify-center rounded-2xl bg-primary/15 text-xl font-bold text-primary">
          EL
        </div>
        <div>
          <p class="text-base font-semibold text-foreground">{siteConfig.name}</p>
          <p class="text-sm text-muted">{siteConfig.tagline}</p>
        </div>
      </div>
      <p class="max-w-xl text-sm text-muted">{siteConfig.footer.headline}</p>
      <div class="flex flex-wrap gap-3 text-sm text-muted">
        {navConfig.links.map((link) => (
          <a class="rounded-full border border-white/10 px-3 py-1 transition hover:border-primary/40 hover:text-white" href={link.href}>
            {link.label}
          </a>
        ))}
      </div>
    </div>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {siteConfig.footer.columns.map((column) => (
        <div class="space-y-3" aria-label={column.title}>
          <p class="text-sm font-semibold text-foreground">{column.title}</p>
          <ul class="space-y-2 text-sm text-muted">
            {column.links.map((link) => (
              <li>
                <a class="transition hover:text-white" href={link.href}>
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </Container>
  <div class="border-t border-white/10 bg-surface/80 py-4">
    <Container class="flex flex-col justify-between gap-4 text-xs text-muted sm:flex-row">
      <span>{siteConfig.footer.copyright}</span>
      <div class="flex gap-3">
        <a class="transition hover:text-white" href="#">Privacy</a>
        <a class="transition hover:text-white" href="#">Terms</a>
        <a class="transition hover:text-white" href="#">Status</a>
      </div>
    </Container>
  </div>
</footer>
